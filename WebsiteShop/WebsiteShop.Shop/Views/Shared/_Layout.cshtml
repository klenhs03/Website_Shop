<!DOCTYPE html>
<html lang="zxx">

<head>
    <meta charset="UTF-8">
    <meta name="description" content="Ogani Template">
    <meta name="keywords" content="Ogani, unica, creative, html">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <title>KK SHOP</title>

    <!-- Google Font -->
    <link href="https://fonts.googleapis.com/css2?family=Cairo:wght@200;300;400;600;900&display=swap" rel="stylesheet">

    <!-- Css Styles -->
    <link rel="stylesheet" href="@Url.Content("~/_LayoutOrgan/css/bootstrap.min.css")" type="text/css">
    <link rel="stylesheet" href="@Url.Content("~/_LayoutOrgan/css/font-awesome.min.css")" type="text/css">
    <link rel="stylesheet" href="@Url.Content("~/_LayoutOrgan/css/elegant-icons.css")" type="text/css">
    <link rel="stylesheet" href="@Url.Content("~/_LayoutOrgan/css/nice-select.css")" type="text/css">
    <link rel="stylesheet" href="@Url.Content("~/_LayoutOrgan/css/jquery-ui.min.css")" type="text/css">
    <link rel="stylesheet" href="@Url.Content("~/_LayoutOrgan/css/owl.carousel.min.css")" type="text/css">
    <link rel="stylesheet" href="@Url.Content("~/_LayoutOrgan/css/slicknav.min.css")" type="text/css">
    <link rel="stylesheet" href="@Url.Content("~/_LayoutOrgan/css/style.css")" type="text/css">
   
     @RenderSection("styles", false)
    <style>
        .field-validation-error {
            color: red;
        }
    </style>
    
</head>

<body>
    <!-- Page Preloder -->
    <div id="preloder">
        <div class="loader"></div>
    </div>
    <!-- Header Section Begin -->
    @{
        await Html.RenderPartialAsync("_Header"); // Header.cshtml gọi là Partial View
    }
    <!-- Header Section End -->
    

    <!-- Featured Section Begin -->
    <div class="container">
    @RenderBody()
    </div>
   
    <!-- Featured Section End -->

   
    <!-- Footer Section Begin -->
    @{
        await Html.RenderPartialAsync("_Footer"); 
    }
    <!-- Footer Section End -->
    <!-- Js Plugins -->
    <script src="@Url.Content("~/_LayoutOrgan/js/jquery-3.3.1.min.js")"></script>
    <script src="@Url.Content("~/_LayoutOrgan/js/bootstrap.min.js")"></script>
    <script src="@Url.Content("~/_LayoutOrgan/js/jquery.nice-select.min.js")"></script>
    <script src="@Url.Content("~/_LayoutOrgan/js/jquery-ui.min.js")"></script>
    <script src="@Url.Content("~/_LayoutOrgan/js/jquery.slicknav.js")"></script>
    <script src="@Url.Content("~/_LayoutOrgan/js/mixitup.min.js")"></script>
    <script src="@Url.Content("~/_LayoutOrgan/js/owl.carousel.min.js")"></script>
    <script src="@Url.Content("~/_LayoutOrgan/js/main.js")"></script>
   

    @RenderSection("scripts", false);

</body>

</html>