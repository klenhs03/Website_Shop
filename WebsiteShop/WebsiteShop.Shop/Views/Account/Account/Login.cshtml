@{
    ViewBag.Title = "Login";
}

<section class="section-conten padding-y" style="min-height:84vh">
    <div class="card mx-auto" style="max-width: 380px; margin-top:100px;">
        <div class="card-body">
            <h4 class="card-title mb-4">Sign in</h4>

            <form action="~/Account/Login" method="post">
                @Html.AntiForgeryToken()

                <a href="#"><i class="fa fa-facebook"></i> &nbsp; Sign in with Facebook</a>

                <div class="form-group">
                    <input name="username" class="form-control" placeholder="Username" type="text" value="@ViewBag.UserName">
                    @Html.ValidationMessage("username", "", new { @class = "text-danger" })
                </div>

                <div class="form-group">
                    <input name="password" class="form-control" placeholder="Password" type="password">
                    <span class="glyphicon glyphicon-lock form-control-feedback"></span>
                    @Html.ValidationMessage("password", "", new { @class = "text-danger" })
                </div>

                <div class="form-group">
                    <a href="#" class="float-right">Forgot password?</a>
                    <label class="float-left custom-control custom-checkbox">
                        <input type="checkbox" class="custom-control-input" checked="">
                        <div class="custom-control-label"> Remember </div>
                    </label>
                </div>

                <div class="form-group">
                    <button type="submit" class="btn btn-primary btn-block">Login</button>
                </div>

                <div class="form-group">
                    @Html.ValidationMessage("Error", new { @style = "color:#f00" })
                </div>
            </form>
        </div>
    </div>

    <p class="text-center mt-4">Don't have an account? <a href="~/Account/Register">Sign up</a></p>
    <br><br>
</section>
