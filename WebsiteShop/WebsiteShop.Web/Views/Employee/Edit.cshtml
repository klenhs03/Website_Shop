@model WebsiteShop.DomainModels.Employee //nếu đã khai bóa ở viewimport thì có thể chỉ viết tên class

@{
}
<div class="box box-primary">
    <div class="box-body">
        <form class="form-horizontal" method="post" enctype="multipart/form-data" action="~/Employee/Save">
            <input type="hidden" name="@nameof(Model.EmployeeID)" value="@Model.EmployeeID" />
            <div class="form-group">
                <label class="control-label col-sm-2">Họ và tên: @Html.ValidationMessage(nameof(Model.FullName), new {@style = "color: #f00"})</label>
                <div class="col-sm-10">
                    <input type="text" class="form-control" name="FullName" autofocus
                    name="@nameof(Model.FullName)" value="@Model.FullName"/>
                    
                </div>
            </div>
            <div class="form-group">
                <label class="control-label col-sm-2">Ngày sinh: @Html.ValidationMessage(nameof(Model.BirthDate), new { @style = "color: #f00" })</label>
                <div class="col-sm-10">
                    <input type="text" class="form-control"
                    name="_birthDate" value="@Model.BirthDate.ToString("dd/MM/yyyy")" />
                      
                </div>
            </div>
            <div class="form-group">
                <label class="control-label col-sm-2">Địa chỉ:  @Html.ValidationMessage(nameof(Model.Address), new { @style = "color: #f00"} )</label>
                <div class="col-sm-10">
                    <input type="text" class="form-control" name="Address"
                     name="@nameof(Model.Address)" value="@Model.Address"/>
                </div>
            </div>
            <div class="form-group">
                <label class="control-label col-sm-2">Điện thoại:  @Html.ValidationMessage(nameof(Model.Phone), new { @style = "color: #f00"} )</label>
                <div class="col-sm-10">
                    <input type="text" class="form-control" name="Phone"
                    name="@nameof(Model.Phone)" value="@Model.Phone"/>
                </div>
            </div>
            <div class="form-group">
                <label class="control-label col-sm-2">Email:  @Html.ValidationMessage(nameof(Model.Email), new { @style = "color: #f00"} )</label>
                <div class="col-sm-10">
                    <input type="email" class="form-control" name="Email"
                    name="@nameof(Model.Email)" value="@Model.Email"/>
                      @Html.ValidationMessage("InvalidEmail", new { @style = "color: #f00"})
                </div>
            </div>
            <div class="form-group">
                <div class="col-lg-offset-2 col-sm-10">
                    <div class="checkbox">
                        <label>
                            <input type="checkbox" value="true" name="@nameof(Model.IsWorking)"@(Model.IsWorking ? "checked" :"")> Nhân viên đang hoạt động
                        </label>
                    </div>
                </div>
            </div>
            <div class="form-group">
                <label class="control-label col-sm-2">Ảnh cá nhân:</label>
                <div class="col-sm-10">
                    <input type="file" class="form-control" name="uploadPhoto" accept="image/*"
                           onchange="document.getElementById('Photo').src = window.URL.createObjectURL(this.files[0])"
                           />
                </div>
            </div>
            <div class="form-group">
                <div class="col-lg-offset-2 col-sm-10">
                    <input type="hidden" name="@nameof(Model.Photo)" value="@Model.Photo" />
                    <img id="Photo" src="~/images/employees/@Model.Photo" class="img img-bordered" style="width:200px"/>
                </div>
            </div>
            <div class="form-group">
                <div class="col-lg-offset-2 col-sm-10">
                    <button type="submit" class="btn btn-primary">
                        <i class="fa fa-floppy-o"></i>
                        Lưu dữ liệu
                    </button>
                    <a href="~/Employee" class="btn btn-default">
                        Quay lại
                    </a>
                </div>
            </div>
        </form>
    </div>
</div>
