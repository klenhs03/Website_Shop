@model WebsiteShop.DomainModels.Shipper //nếu đã khai bóa ở viewimport thì có thể chỉ viết tên class

@{
}
<div class="box box-primary">
    <div class="box-body">
        <form action="~/Shipper/Save" method="post">
            <input type="hidden" name="@nameof(Model.ShipperID)" value="@Model.ShipperID" />
            <div class="form-group">
                <label>Tên người giao hàng: @Html.ValidationMessage(nameof(Model.ShipperName), new { @style = "color: #f00" })</label>
                <input type="text" class="form-control" autofocus name="@nameof(Model.ShipperName)" value="@Model.ShipperName">
            </div>
       
            <div class="form-group">
                <label>Điện thoại: @Html.ValidationMessage(nameof(Model.Phone), new { @style = "color: #f00" })</label>
                <input type="text" class="form-control" name="@nameof(Model.Phone)" value="@Model.Phone">
                @Html.ValidationMessage("InvalidPhone", new { @style = "color: #f00"})
            </div>
            

            <div class="form-group text-right">
                <button type="submit" class="btn btn-primary">
                    <i class="fa fa-floppy-o"> Lưu dữ liệu</i>
                </button>
                <a href="~/Shipper" class="btn btn-default">Quay lại </a>
            </div>
        </form>

    </div>
</div>
