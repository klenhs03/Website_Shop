@model WebsiteShop.DomainModels.Customer
@{

}
<div class="box box-primary">
    <div class="box-body">

        <form action="~/Customer/Save" method="post">

            <input type="hidden" name="@nameof(Model.CustomerID)" value="@Model.CustomerID" />

            <div class="form-group">
                <label>Tên khách hàng:</label>
                <input type="text" class="form-control"
                       name="@nameof(Model.CustomerName)" value="@Model.CustomerName">
                @Html.ValidationMessage(nameof(Model.CustomerName), new { @style = "color: #f00" })
            </div>

            <div class="form-group">
                <label>Tên giao dịch:</label>
                <input type="text" class="form-control"
                       name="@nameof(Model.ContactName)" value="@Model.ContactName">
                @Html.ValidationMessage(nameof(Model.ContactName), new { @style = "color: #f00" })
            </div>

            <div class="form-group">
                <label>Điện thoại:</label>
                <input type="text" class="form-control"
                       name="@nameof(Model.Phone)" value="@Model.Phone">
                @Html.ValidationMessage(nameof(Model.Phone), new { @style = "color: #f00" })
            </div>

            <div class="form-group">
                <label>Email:</label>
                <input type="email" class="form-control"
                       name="@nameof(Model.Email)" value="@Model.Email">
                @Html.ValidationMessage(nameof(Model.Email), new { @style = "color: #f00" })
            </div>

            <div class="form-group">
                <label>Địa chỉ:</label>
                <input type="text" class="form-control"
                       name="@nameof(Model.Address)" value="@Model.Address">
                @Html.ValidationMessage(nameof(Model.Address), new { @style = "color: #f00" })
            </div>

            <div class="form-group">
                <label>Tỉnh/thành:</label>
                <select class="form-control" name="@nameof(Model.Province)">
                    <option value="">--Chọn Tỉnh/Thành--</option>
                    @foreach (var province in WebsiteShop.BusinessLayers.CommonDataService.ListOfProvinces())
                    {
                        if (province.ProvinceName == Model.Province)
                        {
                            <option selected value="@province.ProvinceName">@province.ProvinceName</option>
                        }
                        else
                        {
                            <option value="@province.ProvinceName">@province.ProvinceName</option>
                        }
                    }
                </select>
                @Html.ValidationMessage(nameof(Model.Province), new { @style = "color: #f00" })
            </div>

            <div class="checkbox">
                <label>
                    <input type="checkbox" name="@nameof(Model.Islocked)" value="true" @(Model.Islocked ? "checked" : "")>
                    Tài khoản đang bị khoá
                </label>
            </div>

            <div class="form-group text-right">
                <button type="submit" class="btn btn-primary">
                    <i class="fa fa-floppy-o"> Lưu dữ liệu</i>
                </button>
                <a href="~/Customer" class="btn btn-default">
                    Quay lại
                </a>
            </div>
            @Html.ValidationMessage("Error")
        </form>

    </div>
</div>